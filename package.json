{
  "name": "padbase",
  "version": "1.0.0",
  "description": "Data Management App for The Animal Pad",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "cross-env NODE-ENV=production node server.js",
