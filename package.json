    "morgan": "^1.10.0",
    "passport": "^0.4.1"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120
  }
